.search-box
	background: #fff
	border-radius: 3px
	position: relative
	font-size: 14px
	
	&:before,
	&:after
		content: ''
		display: block
		position: absolute
		color: rgba(130,130,130,.1)
	
	&:before
		top: 100%
		left: 0
		right: 0
		border-top: 53px solid
		border-left: 53px solid transparent
	
	&:after
		top: 0
		left: 100%
		height: 34px
		border-left: 61px solid
		border-top: 61px solid transparent
	
	> .search
		border: 0
		width: 100%
		box-sizing: border-box
		padding: 0 50px 0 82px
		height: 42px
		font-size: 14px
		
	> .label 
		position: absolute
		font-weight: bold
		left: 22px
		line-height: 42px
		
	> .search-btn 
		position: absolute
		right: 17px
		top: 12px
		overflow: hidden
		height: 17px
		width: 17px
		text-indent: -999px
		border: 0
		background: 0
		cursor: pointer
		
		&:before,
		&:after
			content: ''
			position: absolute
			background: #c7dd34
			
		&:before 
			width: 100%
			top: 7px
			left: 0
			height: 3px
			
		&:after 
			height: 100%
			top: 0
			left: 7px
			width: 3px